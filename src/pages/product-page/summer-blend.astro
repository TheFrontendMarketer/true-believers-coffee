---
import Layout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import summerBlend from "../../assets/410x506_light_coffee.jpg";
---

<Layout
  title="Summer Blend"
  description="Light and refreshing summer blend coffee"
>
  <main class="bg-white">
    <section class="bg-white hero">
      <div class="hero-image">
        <Image
          src={summerBlend}
          alt="Summer Blend Coffee"
          class="w-full h-120 object-cover"
          loading="eager"
          decoding="async"
        />
      </div>
    </section>

    <section class="bg-white">
      <div class="site-container py-16">
        <div class="flex flex-col lg:flex-row gap-12 items-center">
          <!-- Product Image -->
          <div class="w-full lg:w-1/2">
            <Image
              src={summerBlend}
              alt="Summer Blend Coffee"
              class="w-full h-96 object-cover rounded-lg shadow-lg"
              loading="eager"
              decoding="async"
            />
          </div>

          <!-- Product Details -->
          <div class="w-full lg:w-1/2 space-y-6">
            <h1 class="text-4xl font-bold text-coffee-primary">Summer Blend</h1>
            <p class="text-lg text-gray-600">
              A light and refreshing blend perfect for warm weather. This
              seasonal coffee features bright, citrusy notes with a smooth,
              clean finish that's ideal for iced coffee or your morning cup.
            </p>

            <div class="space-y-4">
              <div class="flex items-center space-x-4">
                <span class="text-2xl font-bold text-coffee-primary">$8.00</span
                >
                <span class="text-sm text-gray-500">12oz bag</span>
              </div>

              <div class="space-y-2">
                <h3 class="text-lg font-semibold">Tasting Notes:</h3>
                <ul class="list-disc list-inside text-gray-600 space-y-1">
                  <li>Bright citrus notes</li>
                  <li>Smooth, clean finish</li>
                  <li>Perfect for iced coffee</li>
                  <li>Light to medium roast</li>
                </ul>
              </div>
            </div>

            <!-- Add to cart -->
            <button
              class="snipcart-add-item mt-8 inline-flex items-center justify-center rounded-md bg-[#E0A341] text-white px-5 py-2.5 font-medium shadow hover:bg-[#371B07] focus-visible:outline focus-visible:outline-offset-2 transition cursor-pointer"
              data-item-id="summer-blend"
              data-item-price="8.00"
              data-item-url={Astro.url.origin + "/product-page/summer-blend"}
              data-item-description="TBC Summer Blend Coffee - 12oz bag"
              data-item-image="/images/store/card2.png"
              data-item-name="TBC Summer Blend"
              data-item-quantity="1"
            >
              Add to Cart
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Info -->
    <section class="bg-gray-50 py-16">
      <div class="site-container">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <h3 class="text-xl font-semibold mb-4">Fresh Roasted</h3>
            <p class="text-gray-600">
              Roasted to order for maximum freshness and flavor.
            </p>
          </div>
          <div class="text-center">
            <h3 class="text-xl font-semibold mb-4">Sustainable</h3>
            <p class="text-gray-600">
              Ethically sourced beans from certified farms.
            </p>
          </div>
          <div class="text-center">
            <h3 class="text-xl font-semibold mb-4">Fast Shipping</h3>
            <p class="text-gray-600">Free shipping on orders over $25.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
